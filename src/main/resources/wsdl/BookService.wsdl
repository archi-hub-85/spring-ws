    </wsdl:message>
    <wsdl:message name="PutRequest">
        <wsdl:part element="books:PutRequest" name="parameters" />
    </wsdl:message>
    <wsdl:message name="PutResponse">
        <wsdl:part element="books:PutResponse" name="result" />
    </wsdl:message>
    <wsdl:message name="GetTopBooksRequest">
        <wsdl:part element="books:GetTopBooksRequest" name="parameters" />
    </wsdl:message>
    <wsdl:message name="GetTopBooksResponse">
        <wsdl:part element="books:GetTopBooksResponse" name="result" />
    </wsdl:message>
    <wsdl:message name="GetBooksByAuthorRequest">
