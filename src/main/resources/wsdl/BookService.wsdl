            <wsdl:output>
                <soap:body use="literal" />
            </wsdl:output>
        </wsdl:operation>
        <wsdl:operation name="GetTopBooks">
            <soap:operation soapAction="http://akh.ru/spring-ws/book-service/GetTopBooks" />
